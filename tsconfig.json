{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}